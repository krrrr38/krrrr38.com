---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

export interface Props {
    subtitle?: string;
}

const {
  subtitle,
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead subtitle={subtitle} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
		    <slot />
		</main>
		<Footer />
	</body>
</html>
